{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "noEmitHelpers": false,
        "lib": ["es6", "dom"],
        "noImplicitAny": true
    },
    "files": [
        "src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "esm"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}